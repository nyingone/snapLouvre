{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}


{% block body %}
    {% include 'inc/_workflow.html.twig' with {'level': '4'} only %}
    <h2>{% trans %}Payment is confirmed {% endtrans %} : {{ bookingOrder.paymentExtRef }} </h2>
    <p>{% trans %}Order ref: {% endtrans %} {{ bookingOrder.bookingRef }} {% trans %} is beeing processed{% endtrans %} </p>

    <h4>{% trans %}confirmation to {% endtrans %} {{ bookingOrder.customer.email }} {% trans %} under way {% endtrans %} </h4>

    <p>{{ bookingOrder.wishes }}  {% trans %}visitor(s) expected on{% endtrans %}  {{ bookingOrder.expectedDate | date("d/m/Y") }}  </p>


    {% if bookingOrder.visitors is defined %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <th>{% trans %}Birthdate{% endtrans %}</th>
                <th>{% trans %}discounted{% endtrans %}</th>
                <th>{% trans %}cost{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for visitor in bookingOrder.visitors %}
                <tr>
                    <td>{{ visitor.firstName | title }}</td>
                    <td>{{ visitor.lastName | upper }}</td>
                    <td>{{ visitor.birthDate| date("d/m/Y") }}</td>
                    <td>{{ visitor.discounted }}</td>
                    <td>{{ visitor.cost }}</td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{% trans %}no visitor found{% endtrans %}</p>
    {% endif %}



{% endblock %}

{% block aside %} {% endblock %}

